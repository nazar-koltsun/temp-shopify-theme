{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="wd-brand-wrapper section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="wd-brand-heading">
      {% if section.settings.img != blank %}
        <img src="{{ section.settings.img | image_url: width: 500 }}">
      {% endif %}
      {% if section.settings.head != blank %}
        <h2>{{ section.settings.head }}</h2>
      {% endif %}
    </div>
    <div class="wd-brand-main-container">
      <div class="wd-brand-wrapper-inner">
        {% for block in section.blocks %}
          <div class="wd-brand-container">
            {% if block.settings.img != blank %}
              <div class="wd-brand-img">
                <img src="{{ block.settings.img | image_url: width: 100 }}">
              </div>
            {% endif %}
            <div class="wd-brand-text">
              <p>{{ block.settings.text }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Brands",
  "settings": [
    {
      "type": "image_picker",
      "id": "img",
      "label": "Icon"
    },
    {
      "type": "text",
      "id": "head",
      "label": "Heading"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "img",
          "label": "Logo"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Brands"
    }
  ]
}
{% endschema %}
