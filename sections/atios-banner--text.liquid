    },
    {
      "type": "number",
      "id": "height_num",
      "label": "Section Min Height Desktop",
      "default": 1020
    },
    {
      "type": "number",
      "id": "height_num_t",
      "label": "Section Min Height Tablet",
      "default": 840
    },
    {
      "type": "number",
      "id": "height_num_m",
      "label": "Section Min Height Mobile",
      "default": 640
    },
    {
      "type": "header",
      "content": "Settings Section"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": -100,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
    "type": "range",
    "id": "margin_bottom",
    "min": -100,
    "max": 100,
    "step": 2,
    "unit": "px",
    "label": "Margin Bottom",
    "default": 0
    },
    {
      "type": "textarea",
      "id": "custom_css",
      "label": "Custom CSS"
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "header",
