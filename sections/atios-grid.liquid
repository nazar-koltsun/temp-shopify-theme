        {
          "type": "select",
          "id": "block_width_t",
          "options": [
            {
              "value": "16.666%",
              "label": "16.666%"
            },
            {
              "value": "25%",
              "label": "25%"
            },
            {
              "value": "33.333%",
              "label": "33.333%"
            },
            {
              "value": "50%",
              "label": "50%"
            },
            {
              "value": "75%",
              "label": "75%"
            },
            {
