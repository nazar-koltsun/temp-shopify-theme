{{ 'contact-form-popup.css' | asset_url | stylesheet_tag }}
<script src="{{ 'contact-form-popup.js' | asset_url }}" defer></script>

<div class="contact-form hidden">
  <div class="contact-form-content">
    <button class="contact-form-close-btn">
      {% render: 'icon-close' %}
    </button>
    
    <form id="contact-form" method="POST" action="https://formspree.io/f/YOUR_FORM_ID">
      <h2 class="contact-form-title">Just a few details to help us <br>
        understand your needs.</h2>
      <!-- Step 1 -->
      <div class="contact-form-step step-one">
        <h3 class="contact-form-block-title">What best describes your role?</h3>
        
        <div class="contact-form-field-wrap">
          <label class="contact-form-label">
            <input class="contact-form-input visually-hidden" 
              type="radio" name="role" value="System integrator" checked> 
            <span>System integrator</span>
            <div class="contact-form-checkbox" role="presentation"></div>
          </label>
        </div>

        <div class="contact-form-field-wrap">
          <label class="contact-form-label">
            <input class="contact-form-input visually-hidden" type="radio" name="role" value="Property developer"> 
            <span>Property developer</span>
            <div class="contact-form-checkbox" role="presentation"></div>
          </label>
        </div>

        <div class="contact-form-field-wrap">
          <label class="contact-form-label">
            <input class="contact-form-input visually-hidden" 
              type="radio" name="role" value="Home owner"> 
              <span>Home owner</span>
              <div class="contact-form-checkbox" role="presentation"></div>
          </label>
        </div>

        <button class="contact-form-btn step-one-btn" type="button">Next</button>
      </div>

      <!-- Step 2 (example for System integrator) -->
      <div class="contact-form-step step-two integrator">
        <h3 class="contact-form-block-title">System Integrator Info</h3>
        <input type="text" name="name" placeholder="Name*" required>
        <input type="text" name="company" placeholder="Company*" required>
        <input type="email" name="email" placeholder="Business Email*" required>
        <input type="tel" name="phone" placeholder="Phone*" required>
        <input type="text" name="country" placeholder="Country*" required>
        <input type="text" name="zip" placeholder="Zip Code">
        <select name="inquiry" onchange="handleInquiryChange(this.value)">
          <option value="">Select inquiry</option>
          <option value="Request B2B prices">Request B2B prices</option>
          <option value="Technical question">Technical question</option>
        </select>
        <button type="button" onclick="goToStep(3)">Next</button>
      </div>

      <!-- Step 3 (example for B2B prices) -->
      <div class="contact-form-step step-3 b2b">
        <h3>Select Products</h3>
        <label><input type="checkbox" name="product" value="Atios KNX Bridge"> Atios KNX Bridge</label><br>
        <label><input type="checkbox" name="product" value="Atios SmartCore"> Atios SmartCore</label><br>
        <button type="submit">Send</button>
      </div>

      <!-- Step 3 (technical question) -->
      <div class="contact-form-step step-3 tech">
        <label>Message</label>
        <textarea name="message"></textarea>
        <button type="submit">Send</button>
      </div>
    </form>
  </div>
</div>
