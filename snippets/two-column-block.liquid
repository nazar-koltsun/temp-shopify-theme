{% case block.type %}
  {% when 'text' %}
    <div class="block-text">{{ block.settings.text }}</div>
  {% when 'heading' %}
    <h2 class="block-heading">{{ block.settings.heading }}</h2>
  {% when 'image' %}
    {% if block.settings.image != blank %}
      <img src="{{ block.settings.image | image_url: width: 600 }}" alt="" />
    {% endif %}
  {% when 'button' %}
    <a href="{{ block.settings.button_url }}" class="block-button" style="display:inline-block;padding:8px 16px;background:#000;color:#fff;text-decoration:none;border-radius:4px;">
      {{ block.settings.button_text }}
    </a>
{% endcase %}
